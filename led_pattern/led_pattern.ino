// Define the colors corresponding to 0 and 1
const CRGB color0 = CRGB::Red;
const CRGB color1 = CRGB::Blue;

void setup() {
    delay(3000); // power-up safety delay
    FastLED.addLeds<LED_TYPE, LED_PIN, COLOR_ORDER>(leds, NUM_LEDS).setCorrection(TypicalLEDStrip);
    FastLED.setBrightness(BRIGHTNESS);
}

void loop() {
    for (int frame = 0; frame < sizeof(picture) / sizeof(picture[0]); frame++) {
        for (int i = 0; i < NUM_LEDS-5; i++) {
            leds[i+5] = (picture[frame][i] == 0) ? color0 : color1;
        }
        FastLED.show();
        FastLED.delay(200 / UPDATES_PER_SECOND);
    }

